@*Define model*@
@model IEnumerable<UserModel>
@*Define view data*@
@{
    ViewData["Title"] = "List of Users"; // Set the title here
}
@*Write Code*@

<div class="row">
    <div class="col-md-8 offset-md-2 ">

        <table class="table">

            <thead>

                <tr>
                    <th>@Html.DisplayNameFor(model => model.UserID)</th>
                    <th>@Html.DisplayNameFor(model => model.UserName)</th>
                    <th>@Html.DisplayNameFor(model => model.Email)</th>
                    <th>Role</th>
                    <th>Actions</th>
                </tr>

            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.UserID)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.UserName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem=> item.Email)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem=> item.Rol)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.UserID"> <i class="bi bi-pencil-square">Edit </i></a>
                            <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.UserID"> <i class="bi bi-eye-square">Details </i></a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.UserID"> <i class="bi bi-trash">Delete </i></a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>

    </div>


</div>
<div class="text-white" style="display: flex; justify-content: flex-end;">
    <a asp-controller="User" asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle"></i>Add New</a>
</div> 