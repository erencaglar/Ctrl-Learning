@{
}
<form method="post" asp-action="Enroll">

    <input asp-for="CourseName" type="hidden" id="CourseName" value="@Model.CourseName" />
    <input asp-for="UserID" type="hidden" id="CourseName" value="@User.FindFirst(ClaimTypes.NameIdentifier)?.Value" />
    <input asp-for="CourseID" type="hidden" id="CourseID" value="@Model.CourseID" />
    <h1>Do you want to enroll @Model.CourseName course</h1>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>