@model UserModel

@{
    ViewData["Title"] = "Add a new user";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>
                Details for @Model.UserName
            </h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">

                <div asp-validation-summary="ModelOnly" class="text-danger">
                </div>
                <div class="form-group">
                    <label asp-for="UserName" class="control-label"></label>
                    <input asp-for="UserName" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" readonly />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" readonly />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Rol" class="control-label"></label>
                    <input asp-for="Rol" class="form-control" readonly />
                    <span asp-validation-for="Rol" class="text-danger"></span>
                </div>
                @* submit button*@
                <div class="form-group">

                    <a class="btn btn-outline-success float-right" asp-action="Edit" asp-route-id="@Model.UserID">Edit</a>
                    <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                </div>



            </div>
        </div>
    </div>
</div>

