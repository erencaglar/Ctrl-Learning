@*Define model*@
@model IEnumerable<EnrollmentModel>
@*Define view data*@
@{
    ViewData["Title"] = "List of Users"; // Set the title here
    var courseId = ViewData["courseId"] as int?;
}
@* @{
    var courseId = Model.FirstOrDefault()?.CourseID;
} *@

@*Write Code*@
<div class="row">
    <div class="col-md-8 offset-md-2 ">

        <table class="table">

            <thead>

                <tr>
                    <th>User ID</th>
                    <th>User Name</th>
                    <th>Enrollment Date</th>
                    <th>Actions</th>
                </tr>

            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.UserID)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.User.UserName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.EnrollmentDate)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-danger" asp-action="DeEnroll" asp-route-UserID="@item.User.UserID" asp-route-CourseID="@item.CourseID"> <i class="bi bi-trash">Delete </i></a>
                        </td>
                    </tr>

                }
            </tbody>

        </table>

    </div>
    <div class="text-white" style="display: flex; justify-content: flex-end;">
        <a asp-controller="Enrollment" asp-action="Enroll2" asp-route-courseId="@ViewBag.CourseId" class="btn btn-success">
            <i class="bi bi-plus-circle"></i>Add New
        </a>
    </div>


</div>



